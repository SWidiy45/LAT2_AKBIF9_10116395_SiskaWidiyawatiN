<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".home_activity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/header_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_header_profile"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-45dp"/>

        <ImageView
            android:id="@+id/ic_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_side_menu" />

        <ImageView
            android:id="@+id/notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_notification" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profil"
            app:civ_border_color="#fff"
            app:civ_border_width="6dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:text="Siska Widiyawati Nugraha"
            android:textColor="@color/colorMainBackground"
            android:textStyle="bold"
            android:padding="2dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blode Type : A"
            android:gravity="center"
            android:layout_below="@+id/name"
            android:textColor="@color/colorBlack"
            android:padding="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profil"
        android:padding="5dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#939597"/>

        <TextView
            android:id="@+id/blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:text="75"
            android:textColor="@color/colorMainBackground"
            android:textStyle="bold"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:text="Blode Give"
            android:layout_below="@+id/blood"
            android:textColor="@color/colorBlack"
            android:padding="1dp"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_toRightOf="@+id/blood"
            android:text="100"
            android:textColor="@color/colorMainBackground"
            android:textStyle="bold"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/txt1"
            android:text="Blode Reseived"
            android:layout_below="@+id/name2"
            android:textColor="@color/colorBlack"
            android:padding="1dp"/>

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name2"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="90dp"
            android:text="330"
            android:textColor="@color/colorMainBackground"
            android:textStyle="bold"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/text2"
            android:text="Thanks"
            android:layout_below="@+id/name2"
            android:textColor="@color/colorBlack"
            android:padding="1dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#939597"
            android:layout_below="@id/txt3"
            android:padding="3dp"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        
        <Button
            android:id="@+id/search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_search_donor"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/search1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search"
            android:text="Search Donor"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search1"
            android:text="Search donor near you"
            android:textColor="@color/colorBlack"/>

        <Button
            android:id="@+id/need"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_blood_needed"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/need1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/need"
            android:text="Blood Needed"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/need1"
            android:text="4 users need blood"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/pesan"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_message"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/pesan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pesan"
            android:text="Message"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pesan1"
            android:text="5 New Message"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="13dp"/>

        <Button
            android:id="@+id/history"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_donor_history"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/history1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history"
            android:text="Blood History"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history1"
            android:text="5 Give , 2 Received"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="45dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>